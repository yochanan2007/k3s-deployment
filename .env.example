# Sensitive Configuration - DO NOT COMMIT TO GIT
# Copy this file to .env and fill in your actual values

# Cloudflare API Token for DNS-01 Challenge
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here

# Let's Encrypt Email
LETSENCRYPT_EMAIL=your_email@example.com

# Domain Configuration
DOMAIN_BASE=your-domain.house
K3S_SUBDOMAIN=k3s.your-domain.house

# Traefik Dashboard Authentication
# Generate with: htpasswd -nb admin yourpassword
TRAEFIK_DASHBOARD_AUTH=admin:$apr1$xxxxxxxx$xxxxxxxxxxxxxxxxxxxx

# MetalLB IP Pool
METALLB_IP_START=10.0.200.1
METALLB_IP_END=10.0.200.250

# Optional: Specific LoadBalancer IPs
# Leave blank to auto-assign from pool
ADGUARD_LB_IP=
TRAEFIK_LB_IP=
